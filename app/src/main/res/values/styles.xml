<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ff_montserrat_bold</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Button.Two" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ff_montserrat_bold</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Text.Main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ff_montserrat_bold</item>
    </style>
    <style name="Text.Desc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ff_montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.Tips">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ff_montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Text.Header">
        <item name="fontFamily">@font/ff_inter</item>
        <item name="android:textSize">38sp</item>
        <item name="android:layout_marginTop">42dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>